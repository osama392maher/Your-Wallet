@model Category

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-md-7">
        <div class="widget p-5" style="background-color:#212b36">
            <form asp-action="Create" asp-route-id="@Model.Id">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="mb-3">
                    @* <label asp-for="Type" class="control-label"></label> *@
                    @* <select asp-for="Type" class="form-control" asp-items="Html.GetEnumSelectList<CategoryType>()"></select> *@
                    <div class="e-btn-group custom-rbt-group">
                        <input type="radio" id="radioleft" name="Type" value="@CategoryType.Expense" checked="(@Model.Type == @CategoryType.Expense)"/>
                        <label class="e-btn" for="radioleft">@CategoryType.Expense</label>
                        <input type="radio" id="radioright" name="Type" value="@CategoryType.Income" checked="(@Model.Type == @CategoryType.Income)"/>
                        <label class="e-btn" for="radioright">@CategoryType.Income</label>
                    </div>
                    <div class="mb-3">
                        @* <label asp-for="Title" class="control-label"></label> *@
                        @* <input asp-for="Title" class="form-control" /> *@
                        <ejs-textbox id="Title" placeholder="Title" floatLabelType="Auto" ejs-for="Title"></ejs-textbox>
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        @* <label asp-for="Icon" class="control-label"></label> *@
                        @* <input asp-for="Icon" class="form-control" /> *@
                        <ejs-textbox id="Icon" placeholder="Icon" floatLabelType="Auto" ejs-for="Icon"></ejs-textbox>
                        <span asp-validation-for="Icon" class="text-danger"></span>
                    </div>

                    <span asp-validation-for="Type" class="text-danger"></span>

                </div>


                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary"/>
                </div>

            </form>
        </div>
    </div>
    <div class="col-md-5">
        <div class="widget h-100 d-flex justify-content-center align-items-center">
            <i class="fa-solid fa-shapes fa-5x"></i>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}